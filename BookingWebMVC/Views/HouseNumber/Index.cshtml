@model IEnumerable<HouseNumber>

@{
    ViewData["Title"] = "View";
}


<div class="w-100 card border-0 p-4">
    <div class="card-header bg-primary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">List of Houses Numbers</h2>
            </div>
        </div>
    </div>
    <div class="card-body border p-4">
        <div class="row pb-3">
            <div class="col-6 offset-6 text-end">
                <a asp-controller="HouseNumbers" asp-action="Create" class="btn btn-warning">
                    <i class="bi bi-plus-square-fill"></i> Create New House Number
                </a>
            </div>
        </div>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.HouseId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.House_Number)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SpecialDetails)
                    </th>
                    
                    <th>Manage the item</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.HouseId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.House_Number)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SpecialDetails)
                        </td>
                        
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="HouseNumber" asp-action="Update" asp-route-houseNumberId="@item.House_Number"
                                   class="btn btn-success mx-2">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-controller="HouseNumber" asp-action="Delete" asp-route-houseNumberId="@item.House_Number"
                                   class="btn btn-danger mx-2">
                                    <i class="bi bi-trash-fill"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
