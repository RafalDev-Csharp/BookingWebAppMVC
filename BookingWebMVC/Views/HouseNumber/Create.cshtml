@model HouseNumber


<div class="w-100 card border-0 p-4">
    <div class="card-header bg-primary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Create House Number</h2>
            </div>
        </div>
    </div>
    <div class="card-body border p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <div class="p-3">
                <div asp-validation-summary="All"></div>
                <div class="form-floating py-1 col-12">
                    <select asp-for="@Model.HouseId" asp-items="@ViewData["HousesSelectListItems"] as IEnumerable<SelectListItem>" 
                        class="form-select border shadow">
                    <option disabled selected>--Select a House--</option>    
                    </select>
                    <label asp-for="HouseId" class="ms-2"></label>
                    <span asp-validation-for="HouseId" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="House_Number" class="form-control border shadow" />
                    <label asp-for="House_Number" class="ms-2"></label>
                    <span asp-validation-for="House_Number" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="SpecialDetails" class="form-control border shadow" />
                    <label asp-for="SpecialDetails" class="ms-2"></label>
                    <span asp-validation-for="SpecialDetails" class="text-danger"></span>
                </div>
                
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-success w-100">
                            <i class="bi bi-check-circle"></i> Create
                        </button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="HouseNumber" asp-action="Index" class="btn btn-secondary w-100">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@*request never goes to controller when model state is no t valid, and validation/action Create-Post in controller will be not executed until model data will be filled properly
    it's server side validation.
*@
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
